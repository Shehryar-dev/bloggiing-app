<!-- Form Section -->
<main class="px-6 py-10 max-w-3xl mx-auto">
  <h2 class="text-3xl font-bold mb-6 text-center text-indigo-400">
    Add New Blog
  </h2>

  <form
    action="/blog/add"
    method="post"
    class="bg-gray-800 p-8 rounded-lg shadow-md"
  >
    <!-- Title -->
    <div class="mb-6">
      <label for="title" class="block mb-2 text-gray-300">Title</label>
      <input
        type="text"
        name="title"
        id="title"
        class="w-full px-4 py-2 rounded bg-gray-700 text-white"
        required
      />
    </div>

    <!-- Body -->
    <div class="mb-6">
      <label for="body" class="block mb-2 text-gray-300">Content</label>
      <textarea
        name="body"
        id="body"
        rows="6"
        class="w-full px-4 py-2 rounded bg-gray-700 text-white"
        placeholder="Write your blog here..."
      ></textarea>
    </div>

    <!-- Cover Image -->
    <!-- Cover Image Upload -->
    <div class="mb-6">
      <label for="coverImage" class="block mb-2 text-gray-300 font-medium"
        >Cover Image</label
      >

      <label
        for="coverImage"
        class="flex items-center justify-center w-full px-4 py-6 border-2 border-dashed border-indigo-500 rounded-lg cursor-pointer bg-gray-700 hover:border-indigo-400 hover:bg-gray-600 transition"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-8 w-8 text-indigo-400 mr-2"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 16v1a2 2 0 002 2h12a2 2 0 002-2v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
          />
        </svg>
        <span class="text-gray-200">Click to upload or drag image here</span>
        <input
          id="coverImage"
          name="coverImage"
          type="file"
          class="hidden"
          accept="image/*"
        />
      </label>
    </div>

    <button
      type="submit"
      class="w-full bg-indigo-600 hover:bg-indigo-700 py-2 rounded text-white font-semibold"
    >
      Publish Blog
    </button>
  </form>
</main>

